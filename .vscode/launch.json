{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Flask",
        "type": "python",
        "request": "launch",
        "module": "flask",
        "env": {
          "FLASK_APP": "app/__init__.py",
          "FLASK_ENV": "development"
        },
        "args": [
          "run",
          "--no-debugger",
          "--no-reload"
        ],
        "python": "C:\\Python39\\python.exe", // Update this to your actual Windows path
        "jinja": true
      }
    ]
  }
  